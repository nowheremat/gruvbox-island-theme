<idea-plugin>
    <id>com.nowheremat.gruvbox.island</id>

    <name>Gruvbox Island Theme</name>

    <vendor url="https://github.com/nowheremat/gruvbox-island-theme">Nowheremat</vendor>

    <description><![CDATA[
      A high-contrast Gruvbox theme based on the Islands UI.
      Includes Dark variants optimized for modern IntelliJ UIs.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <depends optional="true" config-file="plugin-classic-ui.xml">com.intellij.classic.ui</depends>

    <extensions defaultExtensionNs="com.intellij">

        <themeProvider
                id="com.github.nowheremat.gruvbox.dark.islands"
                path="themes/gruvbox-dark/gruvbox-dark.json"
                targetUi="islands"
        />

        <themeProvider
                id="com.github.nowheremat.gruvbox.light.new"
                path="themes/gruvbox-light/gruvbox-light.json"
                targetUi="new"
        />

    </extensions>

</idea-plugin>